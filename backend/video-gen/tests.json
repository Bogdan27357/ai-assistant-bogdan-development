{
  "tests": [
    {
      "name": "Test video generation with valid prompt",
      "method": "POST",
      "path": "/",
      "body": {
        "prompt": "A beautiful sunset over ocean waves",
        "model": "veo-3-fast"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "video_url": "string",
        "model": "veo-3-fast"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Test missing prompt error",
      "method": "POST",
      "path": "/",
      "body": {
        "model": "veo-3-fast"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "Prompt is required"
      },
      "bodyMatcher": "partial"
    }
  ]
}
